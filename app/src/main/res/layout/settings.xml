<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:background="@android:color/black"
    android:weightSum="1"
    android:columnCount="3"
    android:rowCount="3"
    android:orientation="vertical"
    android:padding="16dp">


    <Switch
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:text="Level Options"
        android:textAlignment="center"
        android:textColor="#A0A0A0"
        android:id="@+id/bNextBase"
        android:enabled="true"
        android:textSize="16sp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal|top" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="Update"
        android:id="@+id/bUpdateData"
        android:textSize="16sp"
        android:layout_row="0"
        android:layout_column="2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="Default"
        android:id="@+id/bDefaultData"
        android:textSize="16sp"
        android:layout_row="0"
        android:layout_column="1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/bEditText"
        android:textSize="16sp"
        android:layout_row="1"
        android:layout_column="2"
        android:text="Save"
        android:layout_gravity="fill_horizontal|bottom"
        android:focusable="true" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:id="@+id/etEditText"
        android:textSize="16sp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:inputType="textNoSuggestions|textMultiLine"
        android:enabled="true"
        android:text="fdgdfg f dfg fgd f dffdg dfdfdf dfgfd dfg" />



    <ExpandableListView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/exp_list"
        android:divider="#606060"
        android:dividerHeight="0.5dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:paddingTop="16dp"
        android:layout_gravity="fill_vertical" />

</GridLayout>